{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2022",
    "useDefineForClassFields": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2022",
      "dom"
    ]
  }
}
